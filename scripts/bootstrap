#!/usr/bin/env bash
# http://redsymbol.net/articles/unofficial-bash-strict-mode/
set -euxo pipefail
IFS=$'\n\t'

pipenv install
pipenv run pip3 install cortexpy

mkdir -p lib
mkdir -p opt
pushd lib
wget https://github.com/mcveanlab/CortexJDK/archive/v0.3-alpha.tar.gz
tar xf v0.3-alpha.tar.gz
pushd CortexJDK-0.3-alpha
ant
cp dist/cortexjdk.jar ../../opt/cortexjdk.jar
popd
popd


